<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.skorpz-startup"
       version="0.3"
       name="[COLOR blue]-[/COLOR] Skorpz's Notifications [COLOR yellow]-[/COLOR]"
	   provider-name="[COLOR purple]SKO[/COLOR][COLOR blue]RPZ[/COLOR]">
  <requires>
  	<import addon="xbmc.python" version="2.1.0"/>
  	<import addon="script.module.addon.common" optional="true" />
  </requires>
  <extension point="xbmc.python.script" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" start="startup">
  </extension>
  <extension point="xbmc.addon.metadata">
  	<summary>Skorpz NEWS</summary>
  	<description>Receive Important Notifications, news and updates from SkorpzTV including changes/available updates.</description>
  	<disclaimer>I take no responsibility for any problems this plugin might in any way, form, shape or size cause.</disclaimer>
  	<language>en</language>
  	<platform>all</platform>
  	<forum>https://</forum>
  	<website>https://</website>
  	<source></source>
  	<email></email>
    <assets>
        <icon>icon.png</icon>
        <fanart>fanart.jpg</fanart>
    </assets>

  </extension>
</addon>


