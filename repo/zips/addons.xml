<?xml version="1.0" encoding="UTF-8"?>
<addons>

                        <!--// The Hub Wizard \\-->
                          <!--// TeamSkorpz \\-->

<addon id="plugin.program.skorpz.wizard"
       name="[COLOR blue]-[/COLOR] Skorpz's Wizard [COLOR yellow]-[/COLOR]"
	   version="0.2"
	   provider-name="[COLOR purple]SKO[/COLOR][COLOR blue]RPZ[/COLOR]">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Skorpz's Wizard</summary>
    <description lang="en">In this Wizard you will find Skorpz's latest Kodi 18.9 custom Builds/Tools, A Big Thanks to whufclee at NaN, GUYS at TI, Brackets for the app installer!! RomanVM for the PyXBMCt libs. Fire TV Guru for the PyXBMCt layout  Also a very special Thanks to Surfacingx for the code used in this add-on.</description>
    <platform>all</platform>
	<website>https://www.teamskorpz.github.io</website>
  </extension>
</addon>

<addon id="repository.skorpz.repo" name="Skorpz's Repository" version="0.0.1" provider-name="TeamSkorpz">
    <extension point="xbmc.addon.repository" name="Skorpz's Repository">
        <dir>
            <info compressed="false">https://raw.githubusercontent.com/TeamSkorpz/teamskorpz.github.io/master/repo/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/TeamSkorpz/teamskorpz.github.io/master/repo/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/TeamSkorpz/teamskorpz.github.io/master/repo/zips/</datadir>
        </dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Skorpz's Repository</summary>
        <description>Coming Soon!</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
</addons>
